<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.RoleDao">

    <resultMap id="roleMap" type="com.pojo.Role">
        <!--因为在查询数据库的时候两张关联表的id名称重复了，所以要将其中一个表的id值设置成别名-->
        <!--同时在数据库中也要讲column的值设置成别名才能保证结果集全部显示出来-->
        <id property="id" column="rid"/>
        <result property="roleName" column="role_name"/>
        <result property="roleDesc" column="role_desc"/>
        <!--配置角色对应的用户信息的集合映射-->
        <collection property="users" ofType="com.pojo.User">
            <id column="id" property="id"/>
            <result property="username" column="username"/>
            <result property="birthday" column="birthday"/>
            <result property="sex" column="sex"/>
            <result property="address" column="address"/>
        </collection>
    </resultMap>

    <select id="findAll" resultMap="roleMap">
        select r.id as rid ,r.role_name,r.role_desc ,u.* from role r
        left outer join user_role ur on r.id = ur.rid
        left outer join user u on u.id = ur.uid
    </select>


</mapper>