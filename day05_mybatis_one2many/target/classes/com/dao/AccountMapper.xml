<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.AccountDao">

    <select id="findAll" resultType="com.pojo.Account">
        select * from account
    </select>

    <!--查询所有账户以及其对应的用户信息-->
    <select id="findAllAccount" resultType="com.pojo.AccountUser">
        select a.*,u.username,u.address from account a,user u where u.id = a.id

    </select>


</mapper>